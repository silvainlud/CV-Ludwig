<!DOCTYPE html>
<html lang="fr">
<head>

    {% set _title = block('title') %}
    {% if _title is defined and _title is not empty %}
        {% set _title = _title ~ ' | ' %}
    {% endif %}
    {% set _title = _title ~  'site_name'|trans %}
    <meta charset="UTF-8">
    <meta name="title" content="{{ _title -}}">
    <meta name="description" content="Curiculum Vitae de Ludwig SILVAIN (Développeur informatique)">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://dev.silvain.eu/">
    <meta property="og:title" content="{{ _title -}}">
    <meta property="og:description" content="Ludwig SILVAIN (Développeur informatique)">
    <meta property="og:image" content="{{ absolute_url(asset('img/site-screen.png')) }}">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://dev.silvain.eu/">
    <meta property="twitter:title" content="{{ _title -}}">
    <meta property="twitter:description" content="Ludwig SILVAIN (Développeur informatique)">
    <meta property="twitter:image" content="{{ absolute_url(asset('img/site-screen.png')) }}">

    <title>{% block title %}{% endblock %} {% if block('title') is not empty %}| {% endif -%}{{ "site_name"|trans }}</title>
    {% include('index/include/header.html.twig') with {} only %}
    {% block head %}{% endblock %}
    {% block  stylesheet %}{% endblock %}
    {% for js in encore_entry_js_files('index-main') %}
        <script src="{{ js }}" defer></script>
    {% endfor %}
</head>
<body>
{% include('index/include/menu_top.html.twig') with {} only %}
<main>
    {% block header %}
        <div class="header">
            <div class="header-main">
                <img src="{{ asset('img/header/icon_cloud.svg') }}" class="header_img_cloud" alt="nuage"
                     style="left: 19%;top: 1%;">
                <img src="{{ asset('img/header/icon_cloud.svg') }}" class="header_img_cloud" alt="nuage"
                     style="left: 5%;top: 37%;">
                <img src="{{ asset('img/header/icon_earth.svg') }}" class="header_img_earth" alt="terre"
                     style="top: 37%;left: 68%;width: 10vw;">
                <img src="{{ asset('img/header/icon_Rocket.svg') }}" class="header_img_rocket" alt="fusée"
                     style="top: 12%;left: 78%;width: 11vw;">
                <div class="header_content">
                    <img src="{{ asset('img/profil.png') }}" alt="">
                    <div class="header_title">
                        <p class="header_title_title">Ludwig SILVAIN</p>
                        <p class="header_title_content">Developpeur Informatique</p>
                    </div>
                </div>
            </div>
            {{ source('@public_path'~asset('img/index_header.svg')) }}
        </div>
    {% endblock %}
    {% block body %}
        <div class="main-content">
            {% block content %}{% endblock %}
        </div>
    {% endblock %}
</main>
{% include('index/include/footer.html.twig') with {} only %}


{% block script %}{% endblock %}
</body>
</html>