<header>
    <img src="{{ asset('favicon_256.png') }}" alt="Logo de silvain.eu">
    <div class="header_separate" id="header_separate_logo"></div>
    <nav>
        <ul class=" header_menu-list">
            <li><a href="{{ path('index') }}">Accueil</a></li>
            <li><a href="{{ path('cv-my_career') }}">Parcours</a></li>
            <li><a href="{{ path('cv-my_skills') }}">Compétences</a></li>
            <li><a href="{{ path('cv-making') }}">Réalisations</a></li>
            <li><a href="{{ path('cv-my_passions') }}">Passions</a></li>
        </ul>
        <p class="header_menu_site-name">
            {{ "site_name"|trans }}
        </p>
        <div class="header_space"></div>

        <theme-switch></theme-switch>

        <a href="{{ path('contact') }}" class="app-nav-btn-text" title="Me Contacter">
            <i class="far fa-envelope-open"></i>
        </a>


        {% if app.user %}
            <a href="{{ path('db_index') }}" class="app-nav-btn-text" title="{{ 'general.menu.administration'|trans }}">
                <i class="fas fa-shield-alt"></i>
            </a>
            <div class="header_separate" id="header_separate_action"></div>
            <a href="{{ path('app_logout') }}" class="app-nav-btn-text" title="{{ 'general.menu.sign-out'|trans }}">
                <i class="fas fa-sign-out-alt"></i>
            </a>
        {% else %}
            <div class="header_separate" id="header_separate_action"></div>
            <a href="{{ path('app_login') }}" class="app-nav-btn-text" title="{{ 'general.menu.sign-in'|trans }}">
                <i class="fas fa-sign-in-alt"></i>
            </a>
        {% endif %}

        <div class="header_menu_responsive-zone" >
            <div class="header_separate"></div>
            <button class="app-nav-btn-text hambuger_icon  d-lg-none" title="{{ 'general.menu.sign-in'|trans }}">
                <span></span>
            </button>
        </div>
    </nav>
</header>