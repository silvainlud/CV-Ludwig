{% extends 'dashboard/base.html.twig' %}

{% block content_class %}container-fuild{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-8">
            {% if selectCategory is not null %}
                <div class="card mb-5" id="skills_list">
                    <div class="card-body">
                        <h3>{{ 'cv.skills.skill-categories.title._'|trans({"%name%" : selectCategory.name}) }}</h3>
                        <table class="db_data-table">
                            <thead>
                            <tr>
                                <td>#</td>
                                <td>Nom</td>
                                <td class="text-right">Action</td>
                            </tr>
                            </thead>
                            <tbody>
                            {% for s in skills %}
                                <tr>
                                    <td>{{ s.id }}</td>
                                    <td>{{ s.technologie.name }}</td>
                                    <td class="text-right">
                                        <a href="{{ path('db_cv_skills_edit', {'skill': s.id}) }}"
                                           class="app-btn app-btn-blue app-btn-text">
                                            <i class="fas fa-pen-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}
            <div class="card" id="categories_list">
                <div class="card-body">
                    <h3>{{ 'cv.skills.skill-categories.title.list'|trans }}</h3>
                    <table class="db_data-table db_data-table_hoverable">
                        <thead>
                        <tr>
                            <td>#</td>
                            <td>{{ 'cv.skills.skill-categories.attr.name'|trans }}</td>
                            <td>{{ 'cv.skills.skill-categories.attr.order'|trans }}</td>
                            <td class="text-right">Action</td>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in categories %}
                            <tr>
                                <td>{{ c.id }}</td>
                                <td>{{ c.name }}</td>
                                <td>{{ c.ordre }}</td>
                                <td class="text-right">
                                    <a href="{{ path('db_cv_skills_categories_view', {'cat': c.id}) }}"
                                       class="app-btn app-btn-blue app-btn-text">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('db_cv_skills_categories_edit', {'cat': c.id}) }}"
                                       class="app-btn app-btn-blue app-btn-text">
                                        <i class="fas fa-pen-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-4">
            {% if selectCategory is not null %}
                <div class="card mb-5" id="skills_add">
                    <div class="card-body container-fluid">
                        <h3>{{ 'cv.skills.title.add'|trans }}</h3>
                        {% form_theme formSkill 'dashboard/include/form.html.twig' %}
                        {{ form(formSkill) }}
                    </div>
                </div>
            {% endif %}
            <div class="card" id="categories_add">
                <div class="card-body container-fluid">
                    <h3>{{ 'cv.skills.skill-categories.title.add'|trans }}</h3>
                    {% form_theme formCat 'dashboard/include/form.html.twig' %}
                    {{ form(formCat) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}