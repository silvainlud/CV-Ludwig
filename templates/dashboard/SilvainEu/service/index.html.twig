{% extends 'dashboard/base.html.twig' %}

{% block content_class %}container{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center mb-5">
                <h2 class="mb-0">Services</h2>
                <div class="flex-grow-1"></div>
                <div class="justify-content-end">
                    <a href="{{ path('db_silvaineu_services-add') }}" class="app-btn app-btn-green">
                        {{ 'silvaineu.service.title.add'|trans }}
                    </a>
                </div>
            </div>
            <table class="db_data-table db_data-table_hoverable">
                <tbody>
                {% for s in services %}
                    <tr>
                        <td class="td_icon">
                            <img src="{{ path('silvaineu_service_icon', {"slug" : s.slug}) }}" alt="">
                        </td>
                        <td class="td_key">
                            <h3>NÂ° :</h3>
                            <p>{{ s.id }}</p>
                        </td>
                        <td>
                            <h3>{{ "silvaineu.service.attr.name"|trans }} :</h3>
                            <p>{{ s.name }}</p>
                        </td>
                        <td>
                            <h3>{{ "silvaineu.service.attr.link"|trans }} :</h3>
                            <p>{{ s.link }}</p>
                        </td>
                        <td class="text-right">
                            <h3></h3>
                            <div>
                                <a href="{{ path('db_silvaineu_services-edit', {'service': s.slug}) }}"
                                   class="app-btn app-btn-light-blue app-btn-text">
                                    <i class="fas fa-pen-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}